<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MessageActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="unknown_customer_name"-->
<!--            android:textSize="20dp"-->
<!--            android:id="@+id/tvCustomerNameChat"-->
<!--            android:textColor="#000"-->
<!--            android:textStyle="bold"/>-->
    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B0B0B0"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="bottom"
            android:id="@+id/rcvContent_Message"
            android:paddingHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginHorizontal="10dp"
                android:paddingBottom="3dp"
                android:weightSum="3"
                >
                <EditText
                    android:id="@+id/edtInputContent_Message"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2.9"
                    android:background="@drawable/bg_edtmessage"
                    android:hint="Nhập tin nhắn..."
                    />
                <Button
                    android:id="@+id/btnSend_Message"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textStyle="bold"
                    android:background="@drawable/ic_send"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#FF5722"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>